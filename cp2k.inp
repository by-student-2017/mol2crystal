
&GLOBAL
  PROJECT cp2k_calc
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &GEO_OPT
    OPTIMIZER BFGS
    MAX_ITER 200
  &END GEO_OPT
&END MOTION

&FORCE_EVAL
  METHOD PM7
  &DFTB
    DISPERSION_TYPE D3
    SELF_CONSISTENT TRUE
    DO_EWALD TRUE
    &PARAMETERS
      PARAM_FILE_PATH ./dftb_parameters/
      PARAM_FILE_NAME dftb_param
    &END PARAMETERS
  &END DFTB

  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
      ALPHA_BETA_GAMMA 90.0 90.0 90.0
      PERIODIC XYZ
    &END CELL

    &COORD
      @INCLUDE 'structure.xyz'
    &END COORD

    &TOPOLOGY
      COORD_FILE_NAME structure.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
