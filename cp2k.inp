&GLOBAL
  PROJECT cp2k_calc
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_FORCE 0.0001
    MAX_ITER 500
    OPTIMIZER LBFGS
    &LBFGS
      MAX_F_PER_ITER 20
      MAX_H_RANK 5
      TRUST_RADIUS 0.25
      WANTED_PROJ_GRADIENT 1.0E-6
      WANTED_REL_F_ERROR 1.0E-6
    &END LBFGS
  &END GEO_OPT
  !
  &CELL_OPT
    CONSTRAINT NONE
    KEEP_ANGLES .FALSE.
    EXTERNAL_PRESSURE  [bar] 1.0
    PRESSURE_TOLERANCE [bar] 1.0E-3
    &PRINT
      &CELL
        &EACH
          CELL_OPT 1
        &END EACH
        ADD_LAST NUMERIC
      &END CELL
    &END PRINT
  &END CELL_OPT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep              ! Electronic structure method (DFT,...)
  !
  &DFT
    CHARGE 0
    !
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    !
    &XC                        ! Parameters needed to compute the electronic exchange potential 
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          R_CUTOFF 20.0
          SCALING 0.75e0       ! DFTD2:0.75e0, DFTD3:1.0e0
          TYPE DFTD2           ! DFTD2 or DFTD3
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    !
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW ! GAPW, GPW, LRIGPW, RIGPW, OFGPW
    &END QS
    !
    &MGRID
      NGRIDS 4
      CUTOFF 300
      REL_CUTOFF 60
    &END MGRID
    !
    &SCF                        ! Parameters controlling the convergence of the scf. This section should not be changed. 
      MAX_SCF 300
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      !
      !&OT
      !  MINIMIZER DIIS
      !  PRECONDITIONER FULL_ALL
      !  STEPSIZE 1.5E-01
      !&END OT
      !
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      !
      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
      !
      ADDED_MOS 10
      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE [K] 300
      &END SMEAR
    &END SCF
    !
  &END DFT
  !
  &SUBSYS
    &CELL
      A     1.000000000    0.000000000    0.000000000
      B     0.000000000    1.000000000    0.000000000
      C     0.000000000    0.000000000    1.000000000
    &END CELL
    !
    &TOPOLOGY
      COORD_FILE_NAME ./structure.xyz
      COORDINATE XYZ
      CONNECTIVITY OFF
    &END TOPOLOGY
  &END SUBSYS
  !
  STRESS_TENSOR ANALYTICAL
  &PRINT
    &FORCES ON
    &END FORCES
    !
    &STRESS_TENSOR ON
    &END STRESS_TENSOR
  &END PRINT
  !
&END FORCE_EVAL
